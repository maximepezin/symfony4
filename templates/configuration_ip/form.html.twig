{# templates/batiment/form.html.twig #}
{{ form_start(form, { 'attr': { 'class': 'form-horizontal bordered-group'} }) }}
    <div class="form-group">
        {{ form_label(form.libelle, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.libelle, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.adresseIpV4, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.adresseIpV4, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.masqueSousReseau, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.masqueSousReseau, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.description, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
{{ form_rest(form) }}
    <div class="btn-group pull-right">
        <input class="btn btn-success" type="submit" value="Enregistrer" />
    </div>
{{ form_end(form) }}
