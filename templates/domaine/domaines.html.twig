{# templates/domaine/domaines.html.twig #}
{% set title = 'Domaines référencés' %}

{% extends 'layout.html.twig' %}

{% block title %}{{ title }} &middot; {{ parent() }}{% endblock %}

{% block body %}
                    <div class="panel mb0">
                        <div class="panel-heading border">
                            {{ title }}
                        </div>
                        <div class="panel-body">
                            <div class="row mb20">
                                <div class="col-sm-6">
                                    <div class="toolbar">
                                        <a class="btn btn-success" href="{{ path('base_materiel_domaine_ajouter') }}">
                                            <i class="fa fa-plus mr10"></i>
                                            Ajouter un domaine
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table mb0">
                                    <thead>
                                    <tr>
                                        <th>Domaine</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
{% for domaine in domaines %}
                                        <tr>
                                            <td>{{ domaine.nom }}</td>
                                            <td>
                                                <a class="btn btn-sm btn-primary" href="{{ path('base_materiel_domaine_editer', { 'id': domaine.id }) }}">
                                                    Editer
                                                </a>
                                                <a class="btn btn-sm btn-danger" href="{{ path('base_materiel_domaine_supprimer', { 'id': domaine.id }) }}">
                                                    Supprimer
                                                </a>
                                            </td>
                                        </tr>
{% else %}
                                        <tr>
                                            <td class="text-center" colspan="2">
                                                Aucun domaine référencé dans la base.
                                            </td>
                                        </tr>
{% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
{% endblock %}
