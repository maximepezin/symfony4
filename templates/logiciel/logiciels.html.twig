{# templates/logiciel/logiciels.html.twig #}
{% set title = 'Logiciels référencés' %}

{% extends 'layout.html.twig' %}

{% block title %}{{ title }} &middot; {{ parent() }}{% endblock %}

{% block body %}
                    <div class="panel mb0">
                        <div class="panel-heading border">
                            {{ title }}
                        </div>
                        <div class="panel-body">
                            <div class="row mb20">
                                <div class="col-sm-6">
                                    <div class="toolbar">
                                        <a class="btn btn-info" href="{{ path('base_materiel_logiciel_ajouter') }}">
                                            <i class="fa fa-plus mr10"></i>
                                            Ajouter un logiciel
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table mb0">
                                    <thead>
                                    <tr>
                                        <th>Logiciel</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
{% for logiciel in logiciels %}
                                        <tr>
                                            <td>{{ logiciel.nom }}</td>
                                            <td>
                                                <a class="btn btn-sm btn-default" href="{{ path('base_materiel_logiciel_editer', { 'id': logiciel.id }) }}">
                                                    Editer
                                                </a>
                                                <a class="btn btn-sm btn-danger" href="{{ path('base_materiel_logiciel_supprimer', { 'id': logiciel.id }) }}">
                                                    Supprimer
                                                </a>
                                            </td>
                                        </tr>
{% else %}
                                        <tr>
                                            <td class="text-center" colspan="2">
                                                Aucun logiciel référencé dans la base.
                                            </td>
                                        </tr>
{% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
{% endblock %}
