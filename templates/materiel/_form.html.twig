{# templates/materiel/_form.html.twig #}
{{ form_start(form, { 'attr': { 'class': 'form-horizontal bordered-group'} }) }}
    <div class="form-group">
        {{ form_label(form.nom, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            {{ form_widget(form.nom, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.modele, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            {{ form_widget(form.modele, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.description, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.acheteLe, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-4">
                    {{ form_widget(form.acheteLe.day, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="col-sm-4">
                    {{ form_widget(form.acheteLe.month, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="col-sm-4">
                    {{ form_widget(form.acheteLe.year, { 'attr': { 'class': 'form-control' } }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.numeroSerie, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            {{ form_widget(form.numeroSerie, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.antivirusInstalle, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.antivirusInstalle) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estMajViaWsus, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estMajViaWsus) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estReferenceGlpi, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estReferenceGlpi) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estActifReseau, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estActifReseau) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estPieceRechange, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estPieceRechange) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.domaine, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            {{ form_widget(form.domaine, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.emplacement, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            {{ form_widget(form.emplacement, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    {#
    <div class="form-group">
        {{ form_label(form.piecesRechange, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
        <div class="col-sm-9">
            {{ form_widget(form.piecesRechange, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    #}
    <div class="btn-group pull-right">
        <input class="btn btn-success" type="submit" value="Enregistrer" />
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}
