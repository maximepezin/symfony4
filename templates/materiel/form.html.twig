{# templates/materiel/form.html.twig #}
{{ form_start(form, { 'attr': { 'class': 'form-horizontal bordered-group'} }) }}
    <div class="form-group">
        {{ form_label(form.nom, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.nom, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.modele, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.modele, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.description, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.acheteLe, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            <div class="row">
                <div class="col-sm-4">
                    {{ form_widget(form.acheteLe.day, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="col-sm-4">
                    {{ form_widget(form.acheteLe.month, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="col-sm-4">
                    {{ form_widget(form.acheteLe.year, { 'attr': { 'class': 'form-control' } }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.numeroSerie, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.numeroSerie, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.antivirusInstalle, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.antivirusInstalle) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estMajViaWsus, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estMajViaWsus) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estReferenceGlpi, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estReferenceGlpi) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estActifReseau, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estActifReseau) }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estPieceRechange, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estPieceRechange) }}
                </label>
            </div>
        </div>
    </div>
    <div class="btn-group">
        {{ form_widget(form.enregistrer, { 'attr': { 'class': 'btn btn-success' } }) }}
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}
