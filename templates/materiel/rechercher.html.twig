{# templates/materiel/rechercher.html.twig #}
{% set title = 'Rechercher un matériel' %}

{% extends 'layout.html.twig' %}

{% block title %}{{ title }} &middot; {{ parent() }}{% endblock %}

{% block body %}
                    <div class="panel mb0">
                        <div class="panel-heading border">
                            {{ title }}
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
{% include 'materiel/rechercherForm.html.twig' %}
                                </div>
                            </div>
{% if materiels is defined %}
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Adresse(s) IPv4 / Masque de sous-réseau</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
{% for materiel in materiels %}
                                        <tr>
                                            <td>{{ materiel.nom }}</td>
                                            <td>
{% for configuration_ip in materiel.configurationsIp %}
                                                {{ configuration_ip.adresseIpV4 ~ ' / ' ~ configuration_ip.masqueSousReseau }}{{ loop.last ? '' : '<br />' }}
{% endfor %}
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-default" href="{{ path('base_materiel_materiel_visualiser', { 'slug': materiel.slug }) }}" data-toggle="tooltip" data-placement="bottom" data-original-title="Visualiser">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
{% else %}
                                        <tr>
                                            <td class="text-center" colspan="3">Aucun résultat.</td>
                                        </tr>
{% endfor %}
                                    </tbody>
                                </table>
                            </div>
{% endif %}
                        </div>
                    </div>
{% endblock %}
