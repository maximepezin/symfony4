{# templates/materiel_piece_rechange/form.html.twig #}
{{ form_start(form, { 'attr': { 'class': 'form-horizontal bordered-group' } }) }}
    <div class="form-group">
        {{ form_label(form.pieceRechange, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.pieceRechange, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.estUtilisee, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(form.estUtilisee) }}
                </label>
            </div>
        </div>
    </div>
    <div class="btn-group pull-right">
        <input class="btn btn-success" type="submit" value="Enregistrer" />
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}
