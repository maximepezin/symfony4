{# templates/modele/form.html.twig #}
{{ form_start(form, { 'attr': { 'class': 'form-horizontal bordered-group' } }) }}
    <div class="form-group">
        {{ form_label(form.typeMateriel, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.typeMateriel, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.fabricant, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.fabricant, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.nom, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.nom, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.fichierImage, null, { 'label_attr': { 'class': 'col-sm-2 control-label'} }) }}
        {{ form_widget(form.fichierImage, { 'attr': { 'style': 'padding: 7px;' } }) }}
    </div>
    <div class="btn-group pull-right">
        <input class="btn btn-success" type="submit" value="Enregistrer" />
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}
