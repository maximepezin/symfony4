{# templates/modele/supprimer.html.twig #}
{% set title = 'Supprimer un modèle' %}

{% extends 'layout.html.twig' %}

{% block title %}{{ title }} &middot; {{ parent() }}{% endblock %}

{% block body %}
                    <div class="panel mb0">
                        <div class="panel-heading border">
                            {{ title }}
                        </div>
                        <div class="panel-body">
                            <p>
                                Etes-vous certain de vouloir supprimer le modèle <strong>{{ modele.nom }}</strong> du fabricant <strong>{{ modele.fabricant.nom }}</strong> ?
                            </p>
                            <form action="{{ path('base_materiel_modele_supprimer', { 'id': modele.id }) }}" method="post">
                                <a href="{{ path('base_materiel_modeles') }}" class="btn btn-default">
                                    <i class="fa fa-caret-left"></i>
                                    Retour
                                </a>
                                <input type="submit" value="Supprimer" class="btn btn-danger" />
                                {{ form_rest(form) }}
                            </form>
                        </div>
                    </div>
{% endblock %}
