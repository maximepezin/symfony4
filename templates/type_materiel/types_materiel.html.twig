{# templates/type_materiel/types_materiel.html.twig #}
{% set title = 'Types de matériel référencés' %}

{% extends 'layout.html.twig' %}

{% block title %}{{ title }} &middot; {{ parent() }}{% endblock %}

{% block body %}
                    <div class="panel mb0">
                        <div class="panel-heading border">
                            {{ title }}
                        </div>
                        <div class="panel-body">
                            <div class="row mb20">
                                <div class="col-sm-6">
                                    <div class="toolbar">
                                        <a class="btn btn-success" href="{{ path('base_materiel_type_materiel_ajouter') }}">
                                            <i class="fa fa-plus mr10"></i>
                                            Ajouter un type de matériel
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <ul class="pager pager-square">
{% if num_page != 1 %}
                                <li class="pull-left">
                                    <a href="{{ path('base_materiel_types_materiel', { 'numPage': num_page - 1 }) }}">
                                        <i class="fa fa-caret-left mr5"></i>
                                        Précédent
                                    </a>
                                </li>
{% endif %}
                                <li style="display: inline-block; padding: 5px 14px; border: 1px solid #E0E0E0;">
                                    <i class="fa fa-book mr5"></i>
                                    Page {{ num_page }}/{{ nb_pages }}
                                </li>
{% if num_page != nb_pages %}
                                <li class="pull-right">
                                    <a href="{{ path('base_materiel_types_materiel', { 'numPage': num_page + 1 }) }}">
                                        Suivant
                                        <i class="fa fa-caret-right ml5"></i>
                                    </a>
                                </li>
{% endif %}
                            </ul>
                            <div class="table-responsive">
                                <table class="table table-bordered mb0">
                                    <thead>
                                    <tr>
                                        <th>Type de matériel</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
{% for type_materiel in types_materiel %}
                                        <tr>
                                            <td>{{ type_materiel.libelle }}</td>
                                            <td>
                                                <a class="btn btn-sm btn-primary" href="{{ path('base_materiel_type_materiel_editer', { 'id': type_materiel.id }) }}">
                                                    Editer
                                                </a>
                                                <a class="btn btn-sm btn-danger" href="{{ path('base_materiel_type_materiel_supprimer', { 'id': type_materiel.id }) }}">
                                                    Supprimer
                                                </a>
                                            </td>
                                        </tr>
{% else %}
                                        <tr>
                                            <td class="text-center" colspan="2">
                                                Aucun type de matériel référencé dans la base.
                                            </td>
                                        </tr>
{% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <ul class="pager pager-square">
{% if num_page != 1 %}
                                <li class="pull-left">
                                    <a href="{{ path('base_materiel_types_materiel', { 'numPage': num_page - 1 }) }}">
                                        <i class="fa fa-caret-left mr5"></i>
                                        Précédent
                                    </a>
                                </li>
{% endif %}
                                <li style="display: inline-block; padding: 5px 14px; border: 1px solid #E0E0E0;">
                                    <i class="fa fa-book mr5"></i>
                                    Page {{ num_page }}/{{ nb_pages }}
                                </li>
{% if num_page != nb_pages %}
                                <li class="pull-right">
                                    <a href="{{ path('base_materiel_types_materiel', { 'numPage': num_page + 1 }) }}">
                                        Suivant
                                        <i class="fa fa-caret-right ml5"></i>
                                    </a>
                                </li>
{% endif %}
                            </ul>
                        </div>
                    </div>
{% endblock %}
